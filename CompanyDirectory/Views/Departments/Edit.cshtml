@model CompanyDirectory.Models.Department

@{
    ViewData["Title"] = "Редактировать подразделение";
}

<h1>Редактировать подразделение</h1>

<div class="row">
    <div class="col-md-6">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />

            <div class="form-group mb-3">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="FormationDate" class="control-label"></label>
                <input type="date" asp-for="FormationDate" class="form-control" />
                <span asp-validation-for="FormationDate" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="Description" class="control-label"></label>
                <textarea asp-for="Description" class="form-control" rows="3"></textarea>
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="ParentId" class="control-label"></label>
                <select asp-for="ParentId" class="form-control" asp-items="ViewBag.ParentDepartments">
                    <option value="">-- Без родительского подразделения --</option>
                </select>
            </div>

            <div class="form-group mt-4">
                <input type="submit" value="Сохранить" class="btn btn-primary" />
                <a asp-action="Index" asp-controller="DepartmentsView" class="btn btn-secondary">Отмена</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
